{
  "extends": "stylelint-config-recommended",
  "rules": {
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "layer",
        "screen",
        "extends",
        "tailwind",
        "variants"
      ]
    }],
    "block-no-empty": null,
    "unit-whitelist": ["em", "rem", "s"],
    "no-descending-specificity": null
  }
}
